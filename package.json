{
  "name": "safeseed-custody",
  "version": "1.0.0",
  "description": "Secure cryptocurrency custody solution using Gnosis Safe multi-signature wallets",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:contracts\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:contracts": "cd contracts && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:contracts",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:contracts": "cd contracts && npm test",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "cryptocurrency",
    "custody",
    "gnosis-safe",
    "multi-signature",
    "cold-storage",
    "defi",
    "blockchain"
  ],
  "author": "Safeseed Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^4.9.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.26.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "frontend",
    "backend",
    "contracts"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gavnor/Safeseed-Custody.git"
  },
  "bugs": {
    "url": "https://github.com/Gavnor/Safeseed-Custody/issues"
  },
  "homepage": "https://github.com/Gavnor/Safeseed-Custody#readme",
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
